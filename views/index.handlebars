
<div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 burger-title">
            <h1>EAT DA BURGER</h1>
            </div>
            <div class="col-sm-12 quote-title">
            <h3>“Man who invented the Hamburger was smart; Man who invented the Cheeseburger was a genius.” - Matthew McConaughey</h3>
          </div>
        </div>
        <form class="create-form">
          <div class="form-row align-items-center">
            <div class="col-auto">
              <label class="sr-only" for="inlineFormInput">Burger</label>
              <input type="text" id="inlineFormInput" name="burger" placeholder="Add a burger...">
    
              <button type="submit" class="btn btn-success">Add!</button>
              
            </div>
          </div>
        </form>
      </div>
    </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-sm-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h4 class="panel-title">BURGERS</h4>
          </div>
          <div class="panel-body">
          <ul class="d-inline">
            {{#each burgers}}
            {{#unless devoured}}
            <li>{{this.burger_name}} <button class="btn btn-warning chomp-burger" data-id="{{this.id}}" data-devoured="{{devoured}}"><img id="burger-img" src="public/assets/img/burger.png"></button></li>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        </div>
        </div>
        <div class="col-xs-6 col-sm-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h4 class="panel-title">DEVOURED</h4>
          </div>
          <div class="panel-body">
          <ul class="d-inline">
            {{#each burgers}}
                {{#if devoured}}
            <li>{{this.burger_name}} <button class="btn btn-danger delete-burger" data-id="{{this.id}}" data-devoured="{{devoured}}"><i class="fa fa-trash"></i></button></li>
            <hr>
                {{/if}}
            {{/each}}
          </ul>
        </div>
        </div>
      </div>
      </div>
    </div>