<h1>Eat Da Burger!</h1>

<img src="public/assets/img/burger.png" alt="burger"></img>

<h2>Choose your burger</h2>

<ul>
  {{#each burgers}}
      <li>{{}}</li>
  {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
    <input type="radio" name="waiting" value="0"> Waiting...
  </div>

  <button type="submit">Feed me this burger!</button>
  <button type="submit">I don't want this burger</button>

</form>